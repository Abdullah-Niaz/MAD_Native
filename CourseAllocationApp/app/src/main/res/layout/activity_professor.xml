<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/ProfessorID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Professor ID" />

    <EditText
        android:id="@+id/ProfessorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Professor Name"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnSubmitProfessor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:background="#4CAF50"
        android:padding="10dp"
        android:layout_marginTop="20dp"/>

    <!-- Table Layout to Display Data -->
    <TableLayout
        android:id="@+id/tableLayoutProfessors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:padding="5dp">

        <!-- Table Header -->
        <TableRow
            android:background="#6200EE"
            android:padding="10dp">

            <TextView
                android:layout_weight="1"
                android:text="Professor ID"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:padding="10dp"/>

            <TextView
                android:layout_weight="1"
                android:text="Professor Name"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:padding="10dp"/>
        </TableRow>

        <!-- Sample Data Row -->
        <TableRow
            android:background="#EEEEEE"
            android:padding="10dp">

            <TextView
                android:layout_weight="1"
                android:text="12345"
                android:gravity="center"
                android:padding="10dp"/>

            <TextView
                android:layout_weight="1"
                android:text="John Doe"
                android:gravity="center"
                android:padding="10dp"/>
        </TableRow>

        <!-- Another Sample Data Row -->
        <TableRow
            android:background="#FFFFFF"
            android:padding="10dp">

            <TextView
                android:layout_weight="1"
                android:text="67890"
                android:gravity="center"
                android:padding="10dp"/>

            <TextView
                android:layout_weight="1"
                android:text="Jane Smith"
                android:gravity="center"
                android:padding="10dp"/>
        </TableRow>

    </TableLayout>
</LinearLayout>





