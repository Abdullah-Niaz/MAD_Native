<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F5F5F5">

    <EditText
        android:id="@+id/SubjectCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Subject Code"
        android:padding="10dp" />

    <EditText
        android:id="@+id/SubjectTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Subject Title"
        android:layout_marginTop="10dp"
        android:padding="10dp" />

    <Button
        android:id="@+id/btnSubmitSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="20dp"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="10dp" />

    <TableLayout
        android:id="@+id/tableLayoutSubjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:padding="5dp">

        <!-- Table Header -->
        <TableRow
            android:background="#6200EE"
            android:padding="10dp">

            <TextView
                android:layout_weight="1"
                android:text="Subject Code"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:padding="10dp" />

            <TextView
                android:layout_weight="1"
                android:text="Subject Title"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:padding="10dp" />
        </TableRow>
    </TableLayout>

</LinearLayout>



